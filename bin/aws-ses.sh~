#! /bin/bash

run() {
  java -jar -Dproperties=$1 -Dsandbox=$2 target/aws-ses.1.0-SNAPSHOT.jar
}

run_help() {
  echo "pass in the properties file followed by the sandbox variable"
  echo "ex: ./bin/aws-ses example.properties true"
}

if [ $# = 0 ]; then
  run_help  
else
  if [ -z $2 ]; then
    run $1 $2
  else
    run $1
  fi
fi

